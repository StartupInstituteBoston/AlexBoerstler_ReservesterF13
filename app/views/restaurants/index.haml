.row
  .small-12.columns
    %h1 Restaurants are Swell
    .panel
      = link_to 'Add Restaurant', new_restaurant_path, { :class => 'button'}
      - @restaurants.each do |restaurant|
        .restaurant-list
          %h4= link_to restaurant.name, restaurant_path(restaurant)
          %p
            Located in #{restaurant.city}, #{restaurant.state}
          = link_to 'Edit', edit_restaurant_path(restaurant), :class => "tiny button success"
          = link_to 'Destroy', restaurant_path(restaurant),                                                                             |
            method: :delete, data: { confirm: 'Are you sure you want to destroy this poor restaurant?' }, :class => "tiny button alert" |